<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_reporte_form" model="ir.ui.view">
            <field name="name">reportes.reporte.form</field>
            <field name="model">reportes.reporte</field>
            <field name="arch" type="xml">
                <form string="Reporte">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="fecha"/>
                            <field name="descripcion"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_reporte_tree" model="ir.ui.view">
            <field name="name">reportes.reporte.tree</field>
            <field name="model">reportes.reporte</field>
            <field name="arch" type="xml">
                <list string="Reportes">
                    <field name="name"/>
                    <field name="fecha"/>
                </list>
            </field>
        </record>

        <menuitem id="menu_reportes_root" name="Reportes"/>
        <menuitem id="menu_reportes" name="GestiÃ³n de Reportes" parent="menu_reportes_root" sequence="1"/>

        <record id="action_reportes" model="ir.actions.act_window">
            <field name="name">Reportes</field>
            <field name="res_model">reportes.reporte</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_reportes_action" 
                  name="Reportes" 
                  parent="menu_reportes" 
                  action="action_reportes"/>
    </data>
</odoo>
