<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_courses_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="course">
                <div class="page">
                   <span>HOLA MUNDO reports</span>
                </div>
            </t>
        </t>
    </template>
    <template id="report_picking_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-if="o.picking_type_id.code == 'incoming'">Recepción: </span>
                            <span t-field="o.name"/>
                        </h2>
                        
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Recibir de:</strong>
                                <p t-field="o.partner_id"/>
                                
                                <strong>Tipo de operación:</strong>
                                <p t-field="o.picking_type_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Fecha programada:</strong>
                                <p t-field="o.scheduled_date"/>
                                
                                <strong>Documento origen:</strong>
                                <p t-field="o.origin"/>
                            </div>
                        </div>

                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Descripción</th>
                                    <th>Fecha programada</th>
                                    <th>Fecha límite</th>
                                    <th class="text-right">Demanda</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.move_ids_without_package" t-as="move">
                                    <td><span t-field="move.product_id"/></td>
                                    <td><span t-field="move.name"/></td>
                                    <td><span t-field="move.date"/></td>
                                    <td><span t-field="move.date_deadline"/></td>
                                    <td class="text-right">
                                        <span t-field="move.product_uom_qty"/>
                                        <span t-field="move.product_uom"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
