<?xml version="1.0" encoding="UTF-8"?>
<templates id="new_pos_invoice_appexbo" xml:space="preserve">
    <t t-name="point_of_sale.OrderReceipt"
       t-inherit="point_of_sale.OrderReceipt"
       t-inherit-mode="extension">

        <!-- REEMPLAZA TODO EL CONTENIDO -->
        <xpath expr="." position="replace">

            <div class="pos-receipt" style="width: 302px !important; font-family: 'Arial', sans-serif; color: #000; padding: 10px; box-sizing: border-box; margin: 0; display: block;">

                <!-- ======= LOGO ======= -->
                <div style="text-align: center; margin-bottom: 10px;">
                    <div t-if="props.data.company and props.data.company.logo" style="margin-bottom: 8px;">
                        <img t-att-src="props.data.company.logo" 
                             style="max-width: 100px; height: auto;" alt="Logo"/>
                    </div>
                    <div t-if="!(props.data.company and props.data.company.logo)" 
                         style="font-size: 14px; color: #666; margin-bottom: 8px;">
                        Your logo
                    </div>
                    <div style="font-size: 16px; font-weight: bold; margin-bottom: 5px;">
                        <t t-esc="props.data.company and props.data.company.name or 'My Company'"/>
                    </div>
                    <div style="font-size: 12px;">
                        Tel:<t t-esc="props.data.company and props.data.company.phone or '123'"/>
                    </div>
                </div>

                <!-- ======= LÍNEA SEPARADORA ======= -->
                <div style="border-top: 1px dashed #000; width: 50%; margin: 8px auto;"></div>

                <!-- ======= ATENDIDO POR ======= -->
                <div style="text-align: center; font-size: 12px; margin-bottom: 10px;">
                    Served by <t t-esc="props.data.cashier or props.data.cashier_name or 'Administrator'"/>
                </div>

                <!-- ======= NÚMERO DIARIO (daily_counter) ======= -->
                <div style="text-align: center; margin: 15px 0;">
                    <div style="font-size: 24px; font-weight: bold; line-height: 1.2;">
                        <t t-esc="props.data.daily_counter or (receipt and receipt.daily_counter) or '0'"/>
                    </div>
                </div>

                <!-- ======= DETALLE DE PRODUCTOS ======= -->
                <div style="margin: 15px 0;">
                    <t t-foreach="props.data.orderlines" t-as="line" t-key="line_index">

                        <div style="margin-bottom: 12px;">

                            <!-- NOMBRE + SUBTOTAL A LA DERECHA -->
                            <div style="display: flex; justify-content: space-between; font-size: 13px; font-weight: bold; margin-bottom: 4px;">
                                <span><t t-esc="line.productName or line.product_name"/></span>
                                <span><t t-esc="line.price_subtotal or line.price_subtotal_incl or line.price"/></span>
                            </div>

                            <!-- CANTIDAD × PRECIO UNITARIO -->
                            <div style="font-size: 11px; color: #555; margin-bottom: 4px;">
                                <t t-esc="line.qty or line.quantity"/> Units × 
                                <t t-esc="line.unit_price or line.price_unit"/> Bs. / Unit
                            </div>

                        </div>

                    </t>
                </div>

                <!-- ======= TOTAL ======= -->
                <div style="display: flex; justify-content: space-between; align-items: center; margin: 15px 0;">
                    <div style="font-weight: bold; font-size: 14px; flex: 1; text-align: center;">TOTAL</div>
                    <div style="font-weight: bold; font-size: 16px; text-align: right;">
                        <t t-esc="props.data.total_with_tax or props.data.total_paid or props.data.total or '0.00'"/> Bs.
                    </div>
                </div>

                <!-- ======= MÉTODO DE PAGO ======= -->
                <div style="margin-top: 15px;">
                    <t t-if="props.data.paymentlines" t-foreach="props.data.paymentlines" t-as="payment" t-key="payment_index">
                        <div style="display: flex; justify-content: space-between; align-items: center; font-size: 12px; margin-bottom: 10px;">
                            <span><t t-esc="payment.name or payment.payment_method_name or 'Cash'"/></span>
                            <span style="text-align: right;"><t t-esc="payment.amount or '0.00'"/></span>
                        </div>
                    </t>
                </div>

                <!-- ======= POWERED BY ODOO ======= -->
                <div style="text-align: center; margin-top: 20px; font-size: 11px; color: #666;">
                    Powered by Odoo
                </div>

                <!-- ======= NÚMERO DE ORDEN Y FECHA ======= -->
                <div style="text-align: center; margin-top: 10px; font-size: 11px;">
                    <div><t t-esc="props.data.name or 'Ref. de la orden'"/></div>
                    <div style="margin-top: 5px;">
                        <t t-esc="(new Date()).toLocaleString()"/>
                    </div>
                </div>

            </div>
        </xpath>
    </t>
</templates>
