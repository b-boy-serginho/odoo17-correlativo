<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Vista tree completamente nueva que muestra daily_counter -->
        <record id="view_pos_order_tree_daily" model="ir.ui.view">
            <field name="name">pos.order.tree.daily</field>
            <field name="model">pos.order</field>
            <field name="priority">99999</field>
            <field name="arch" type="xml">
                <tree string="Órdenes" decoration-info="state == 'draft'" decoration-success="state == 'paid'" decoration-danger="state in ('cancel',)">
                    <field name="name" string="Número de recibo"/>
                    <field name="daily_counter" string="Número del pedido" optional="hide"/>
                    <field name="partner_id" optional="hide"/>
                    <field name="user_id" optional="hide"/>
                    <field name="amount_total" sum="Total"/>
                    <field name="state" widget="badge" decoration-success="state == 'paid'" decoration-info="state == 'draft'" decoration-warning="state == 'invoiced'" decoration-danger="state == 'cancel'"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>
